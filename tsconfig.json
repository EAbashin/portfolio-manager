{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowUmdGlobalAccess": true,
    "allowJs": true,
    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "ts-jest": {
    "tsconfig": {
      "jsx": "react-jsx"
    }
  }
  // "include": ["./config/jest/jestSetup.ts"]
}
